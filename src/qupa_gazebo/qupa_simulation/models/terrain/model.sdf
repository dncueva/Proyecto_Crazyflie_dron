<?xml version="1.0"?>
<sdf version="1.6">
  <model name="terrain">
    <static>true</static> <!-- true si el modelo no se mueve -->
    <link name="base_link">
      <visual name="visual">
        <geometry>
          <mesh>
            <uri>model://terrain/meshes/terrain.stl</uri>
            <scale>1 1 1</scale>
          </mesh>
        </geometry>
        <material>
          <script>
            <uri>model://terrain/material/material.material</uri>
            <name>terrain_material</name>
          </script>
        </material>
      </visual>
      <collision name="collision">
        <geometry>
          <mesh>
            <uri>model://terrain/meshes/terrain.stl</uri>
            <scale>1 1 1</scale>
          </mesh>
        </geometry>
      </collision>
    </link>
  </model>
</sdf>
